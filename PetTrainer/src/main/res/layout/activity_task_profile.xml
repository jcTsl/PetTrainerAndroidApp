<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jj.pettrainer.gui.TaskProfileActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/task_title"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/task_description"
            android:layout_marginTop="83dp"
            android:layout_below="@+id/task_title" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description"
            android:id="@+id/textView2"
            android:layout_marginBottom="38dp"
            android:layout_alignBottom="@+id/task_description" android:layout_toLeftOf="@+id/task_title"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/task_due_date" android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/task_reminder" android:layout_below="@+id/task_due_date" android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete!"
            android:id="@+id/task_complete_btn" android:layout_below="@+id/task_reminder" android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Due Date"
            android:id="@+id/textView" android:layout_above="@+id/task_due_date"
            android:layout_alignLeft="@+id/textView2" android:layout_alignStart="@+id/textView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Remind Before"
            android:id="@+id/textView3" android:layout_alignBottom="@+id/task_reminder"
            android:layout_alignLeft="@+id/textView" android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="21dp"/>

</RelativeLayout>
